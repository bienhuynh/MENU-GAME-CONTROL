@model SGP.HCBBOOK.CloudServer.UI.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu SGP GAME?";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>SGP GAME | @ViewBag.Title</title>
    <!-- Favicon-->
    <link rel="icon" href="~/asset/favicon.ico" type="image/x-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="~/asset/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- Waves Effect Css -->
    <link href="~/asset/plugins/node-waves/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="~/asset/plugins/animate-css/animate.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="~/asset/css/style.css" rel="stylesheet">
</head>
<body class="fp-page">
    <div class="fp-box">
        <div class="logo">
            <a href="javascript:void(0);">SGP GAME <b> LOGIN SYSTEM</b></a>
            <small>Icloud Quản lý hệ thống game của Siêu Giải Pháp</small>
        </div>
        <div class="card">
            <div class="body">

                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @id = "forgot_password", @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="msg">
                        Nhập địa chỉ email bạn đã sử dụng để đăng ký. Chúng tôi sẽ gửi cho bạn một email có tên người dùng và liên kết để đặt lại mật khẩu.
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">email</i>
                        </span>
                        <div class="form-line">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @name = "email", @placeholder = "Email", @required = "", @autofocus = "" })
                        </div>
                    </div>
                    <button class="btn btn-block btn-lg bg-pink waves-effect" type="submit">RESET MY PASSWORD</button>
                    <div class="row m-t-20 m-b--5 align-center">
                        <a href="/">Sign In!</a>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Jquery Core Js -->
    <script src="~/asset/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core Js -->
    <script src="~/asset/plugins/bootstrap/js/bootstrap.js"></script>
    <!-- Waves Effect Plugin Js -->
    <script src="~/asset/plugins/node-waves/waves.js"></script>
    <!-- Validation Plugin Js -->
    <script src="~/asset/plugins/jquery-validation/jquery.validate.js"></script>
    <!-- Custom Js -->
    <script src="~/asset/js/admin.js"></script>
    <script src="~/asset/js/pages/examples/forgot-password.js"></script>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
