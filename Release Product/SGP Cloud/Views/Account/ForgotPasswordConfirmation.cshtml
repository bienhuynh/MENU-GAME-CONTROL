@model SGP.HCBBOOK.CloudServer.UI.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu SGP GAME?";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>SGP GAME | @ViewBag.Title</title>
    <!-- Favicon-->
    <link rel="icon" href="~/asset/favicon.ico" type="image/x-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="~/asset/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- Waves Effect Css -->
    <link href="~/asset/plugins/node-waves/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="~/asset/plugins/animate-css/animate.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="~/asset/css/style.css" rel="stylesheet">
</head>
<body class="fp-page">
    <div class="fp-box">
        <div class="logo">
            <a href="javascript:void(0);">SGP GAME <b> LOGIN SYSTEM</b></a>
            <small>Icloud Quản lý hệ thống game của Siêu Giải Pháp</small>
        </div>
        <div class="card">
            
            <div class="body">
                Vui lòng kiểm tra email @String.Format("{0}...{1}", Model.Email.Substring(0, 3), Model.Email.Substring(Model.Email.Length - 4, 4)) của bạn để đặt lại mật khẩu.
                <a class="btn btn-block btn-lg bg-pink waves-effect" href="https://mail.google.com/mail/u/0/">Check mail</a>
                <div class="row m-t-20 m-b--5 align-center">
                    <a href="/">Sign In!</a>
                </div>
            </div>
            
        </div>
    </div>
    <!-- Jquery Core Js -->
    <script src="~/asset/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core Js -->
    <script src="~/asset/plugins/bootstrap/js/bootstrap.js"></script>
    <!-- Waves Effect Plugin Js -->
    <script src="~/asset/plugins/node-waves/waves.js"></script>
    <!-- Validation Plugin Js -->
    <script src="~/asset/plugins/jquery-validation/jquery.validate.js"></script>
    <!-- Custom Js -->
    <script src="~/asset/js/admin.js"></script>
    <script src="~/asset/js/pages/examples/forgot-password.js"></script>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
