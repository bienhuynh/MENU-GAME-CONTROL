@model SGP.HCBBOOK.CORE.Busssiness.Models.UserProfileModel

<!-- Basic Validation -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>Thông tin cơ bản</h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="name" required>
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @name = "name", @required = "", @readonly = ""})
                            <label class="form-label">FisrtName</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @name = "surname", @required = "", @readonly = "" })
                            <label class="form-label">LastName</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @name = "email", @required = "", @readonly = "" })
                            <label class="form-label">Email</label>
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(m => m.NumberPhone, new { @class = "form-control", @type = "tel", @name = "NumberPhone", @readonly = "" })
                            <label class="form-label">NumberPhone</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @name = "Address", @readonly = "" })
                            <label class="form-label">Address</label>
                        </div>
                    </div>
                    <a class="btn btn-primary waves-effect" href="@Url.Action("Edit","Accountting",new { userid =Model.UserId})">Edit</a>
                
            </div>
        </div>
    </div>
</div>
<!-- #END# Basic Validation -->
